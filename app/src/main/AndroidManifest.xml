<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lab.greenpremium">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.screens.splash.SplashActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.screens.start.StartActivity" />
        <activity android:name=".ui.screens.auth.AuthActivity" />

        <activity
            android:name=".ui.screens.main.MainActivity"
            android:label="@string/app_name" />

        <activity android:name=".ui.screens.message.MessageActivity" />
        <activity android:name=".ui.screens.meeting.MeetingActivity" />
        <activity android:name=".ui.screens.plant_detail.PlantDetailActivity" />
        <activity android:name=".ui.screens.calculator.CalcActivity" />
        <activity android:name=".ui.screens.delivery.DeliveryActivity" />
        <activity android:name=".ui.screens.gallery.GalleryActivity" />

    </application>

</manifest>