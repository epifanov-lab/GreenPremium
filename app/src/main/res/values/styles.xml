<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TextAppearance.App.InputView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:fontFamily">@font/sfuitext_regular</item>
    </style>

    <style name="AppTheme.TextInputLayoutError" parent="@android:style/TextAppearance">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:fontFamily">@font/sfuitext_regular</item>
    </style>

    <style name="TransparentDialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/green_button_height</item>
        <item name="android:fontFamily">@font/sfuitext_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Green">
        <item name="android:background">@drawable/bcg_button_green_horizontal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/sfuitext_medium</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sfuitext_regular</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sfuitext_regular</item>
        <item name="android:textColor">@color/green_1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_50</item>
        <item name="colorControlNormal">@color/black_50</item>
        <item name="colorControlActivated">@color/green_1</item>
        <item name="colorControlHighlight">@color/yellow</item>
    </style>

</resources>
