<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">@dimen/auth_button_width</item>
        <item name="android:layout_height">@dimen/auth_button_height</item>
        <item name="android:fontFamily">@font/sfuitext_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Green">
        <item name="android:background">@drawable/bcg_button_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/sfuitext_medium</item>
    </style>

</resources>
