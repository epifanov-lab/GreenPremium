<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="@dimen/space_small_2"
    android:paddingLeft="@dimen/space_small_4"
    android:paddingRight="@dimen/space_small_4"
    android:paddingBottom="@dimen/space_small_2">

    <ProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/progress"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:indeterminate="true"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/space_small_3"
        android:fontFamily="@font/sfuitext_regular"
        android:text="@string/dialog_please_wait"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_14" />

</LinearLayout>