<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_bcg"
                tools:context=".ui.screen.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_huge_6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:fontFamily="@font/sfuitext_bold"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_medium_2"
            android:text="@string/title_plants"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_20"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_favorites"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bcg_circle_transparent"
                android:src="@drawable/ic_favorites"/>

            <ImageButton
                android:id="@+id/button_basket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bcg_circle_transparent"
                android:src="@drawable/ic_shopping_basket"/>

        </LinearLayout>

    </LinearLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_huge_6"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemIconTint="@drawable/nav_icons_states"
        app:itemTextColor="@drawable/nav_text_states"
        app:menu="@menu/navigation"/>

</RelativeLayout>