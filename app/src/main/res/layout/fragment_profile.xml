<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_small_3"
            android:clipToPadding="false" />

        <RelativeLayout
            android:id="@+id/container_complex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_contacts">

            <LinearLayout
                android:id="@+id/container_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_medium_2"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_medium_2"
                android:paddingRight="@dimen/space_medium_2"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/text_position"
                    android:layout_weight="3"
                    android:fontFamily="@font/sfuitext_regular"
                    android:gravity="right|center_vertical"
                    android:text="@string/profile_label_hint_service_cost"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:id="@+id/text_service_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/space_small_3"
                    android:layout_weight="2"
                    android:fontFamily="@font/sfuitext_medium"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_20"
                    tools:text="33.000$" />

            </LinearLayout>

            <TextView
                android:id="@+id/button_calc_service"
                style="@style/Button.Green"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/space_medium_2"
                android:layout_marginLeft="@dimen/space_medium_3"
                android:layout_marginRight="@dimen/space_medium_3"
                android:gravity="center"
                android:text="@string/profile_calc_service"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/container_no_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_calc_service"
                android:background="@color/beige"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/space_medium_1"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_position"
                    android:layout_weight="2"
                    android:fontFamily="@font/sfuitext_regular"
                    android:gravity="center_vertical"
                    android:text="@string/profile_label_hint_no_events"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_position"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:drawableRight="@drawable/ic_next"
                    android:fontFamily="@font/sfuitext_regular"
                    android:gravity="start"
                    android:padding="@dimen/space_small_2"
                    android:text="@string/profile_label_shop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_12" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/container_complex"
            android:background="@color/beige"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_medium_2"
            android:paddingRight="@dimen/space_medium_2"
            android:paddingTop="@dimen/space_medium_4">

            <LinearLayout
                android:id="@+id/container_delivery_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_large_2"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/container_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/space_medium_1"
                    android:background="@drawable/ic_calendar_white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/space_small_1">

                    <TextView
                        android:id="@+id/text_date_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfuitext_medium"
                        android:gravity="center"
                        android:textColor="@color/gray_light_1"
                        android:textSize="@dimen/font_size_14"
                        tools:text="10" />

                    <TextView
                        android:id="@+id/text_date_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfuitext_medium"
                        android:gravity="center"
                        android:textColor="@color/gray_light_1"
                        android:textSize="@dimen/font_size_9"
                        tools:text="июля" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/text_position"
                    android:layout_weight="2"
                    android:fontFamily="@font/sfuitext_regular"
                    android:gravity="center_vertical"
                    android:text="@string/profile_label_hint_delivery_scheduled"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_12" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_list" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_events"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:layout_marginBottom="@dimen/bottom_navigation_bar_height"/>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>
