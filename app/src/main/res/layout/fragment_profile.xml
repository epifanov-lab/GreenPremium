<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_medium_3"
        android:clipToPadding="false"/>

    <TextView
        android:id="@+id/button_calc_service"
        style="@style/Button.Green"
        android:layout_width="match_parent"
        android:layout_below="@id/recycler"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space_medium_2"
        android:layout_marginLeft="@dimen/space_medium_3"
        android:layout_marginRight="@dimen/space_medium_3"
        android:gravity="center"
        android:text="@string/profile_calc_service"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_calc_service"
        android:background="@color/beige"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="@dimen/space_medium_1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_post"
            android:layout_weight="2"
            android:fontFamily="@font/sfuitext_regular"
            android:gravity="center_vertical"
            android:text="@string/profile_label_hint"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_12"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_post"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_next"
            android:fontFamily="@font/sfuitext_regular"
            android:gravity="start"
            android:padding="@dimen/space_small_2"
            android:text="@string/profile_label_shop"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_12"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/obstructor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_huge_6"
        android:background="@color/green_4_60"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone">

<!--        <com.github.mmin18.widget.RealtimeBlurView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            app:realtimeBlurRadius="2dp"/>-->
    </RelativeLayout>

    <include layout="@layout/fab_menu"/>

</RelativeLayout>