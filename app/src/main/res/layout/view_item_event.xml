<?xml version="1.0" encoding="utf-8"?>

<!-- TODO ConstraintLayout -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/space_small_2"
            android:paddingStart="@dimen/space_small_4"
            android:paddingTop="@dimen/space_small_2">

            <TextView
                android:id="@+id/text_num"
                android:layout_width="@dimen/item_event_height"
                android:layout_height="@dimen/item_event_height"
                android:layout_gravity="center"
                android:background="@drawable/bcg_circle_event"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_20"
                tools:text="01" />

            <TextView
                android:id="@+id/text_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_medium_3"
                android:layout_toEndOf="@id/text_num"
                android:fontFamily="@font/sfuitext_medium"
                android:gravity="start"
                android:paddingStart="@dimen/space_medium_1"
                android:paddingTop="@dimen/space_small_2"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_9"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />

            <TextView
                android:id="@+id/text_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text_num"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/space_small_4"
                android:fontFamily="@font/sfuitext_medium"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_size_9"
                tools:text="20.04.2016 16:20" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/container_pdf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bcg_button_green_vertical"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/sfuitext_medium"
                android:gravity="center"
                android:text="PDF"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_12" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_download" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line_connection"
        android:layout_width="@dimen/line_thickness_2"
        android:layout_height="@dimen/space_medium_1"
        android:layout_gravity="center"
        android:background="@color/white" />
</LinearLayout>
