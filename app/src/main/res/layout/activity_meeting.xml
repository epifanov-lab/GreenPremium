<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingTop="@dimen/space_medium_2">

    <ImageView
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_small_3"
        android:layout_marginLeft="@dimen/space_medium_2"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:layout_marginBottom="@dimen/space_medium_1"
        android:layout_marginLeft="@dimen/space_medium_2"
        android:fontFamily="@font/sfuitext_bold"
        android:text="@string/contacts_time_choose"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_20"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_large_2"
        android:clipToPadding="false"/>

    <LinearLayout
        android:id="@+id/container_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_small_2"
            android:layout_marginLeft="@dimen/space_medium_2"
            android:fontFamily="@font/sfuitext_regular"
            android:gravity="left"
            android:text="@string/contacts_meet_date_and_time"
            android:textColor="@color/gray_light_1"
            android:textSize="@dimen/font_size_12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_medium_1"
            android:layout_marginLeft="@dimen/space_medium_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_medium_3"
                android:fontFamily="@font/sfuitext_medium"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14"
                android:text="05 Августа"/>

            <TextView
                android:id="@+id/text_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfuitext_medium"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14"
                android:text="09 : 41"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_thickness_2"
        android:layout_marginBottom="@dimen/space_large_1"
        android:layout_marginLeft="@dimen/space_medium_2"
        android:layout_marginRight="@dimen/space_medium_2"
        android:background="@color/gray_light_2"/>

    <Button
        android:id="@+id/button_proceed"
        style="@style/Button.Green"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space_small_2"
        android:layout_marginLeft="@dimen/space_medium_2"
        android:layout_marginRight="@dimen/space_medium_2"
        android:text="@string/contacts_schedule_meet"/>

</LinearLayout>