<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/container_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:padding="@dimen/space_small_2">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/dummy_contact" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/container_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="55"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_small_2"
            android:paddingRight="@dimen/space_small_2"
            android:paddingTop="@dimen/space_small_2">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_small_1"
                android:fontFamily="@font/sfuitext_medium"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_12"
                tools:text="Борискина Юлия Леонидовна" />

            <TextView
                android:id="@+id/text_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name"
                android:layout_marginBottom="@dimen/space_small_1"
                android:fontFamily="@font/sfuitext_regular"
                android:gravity="center_vertical"
                android:textColor="@color/gray_light_1"
                android:textSize="@dimen/font_size_9"
                tools:text="Генеральный директор" />

            <TextView
                android:id="@+id/text_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_position"
                android:layout_marginBottom="@dimen/space_small_1"
                android:fontFamily="@font/sfuitext_regular"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_9"
                tools:text="jb@greenpremium.ru" />

            <TextView
                android:id="@+id/text_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_mail"
                android:layout_marginBottom="@dimen/space_small_1"
                android:fontFamily="@font/sfuitext_medium"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_10"
                tools:text="+ 7 (495) 994 65 45" />

            <TextView
                android:id="@+id/text_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_phone"
                android:fontFamily="@font/sfuitext_medium"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_9"
                tools:text="Мы ухаживаем за вашими растениями в пн., чт., с 11:00 - 13:00" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/container_controls"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:background="@drawable/bcg_button_green_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/button_call"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_phone" />

            <ImageView
                android:id="@+id/button_mail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_mail_2" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
